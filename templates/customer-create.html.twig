{% extends 'layout.html.twig' %}

{% block body %}
<div class="container">
    <h1 class="title">Crear nuevo cliente</h1>

    {{ form_start(form) }}
        <div class="grid gap-4 grid-cols-2 mb-2">
            <div>
                {{ form_label(form.firstName) }}
                {{ form_errors(form.firstName) }}
                {{ form_widget(form.firstName, {'attr': {'class': 'w-full'}}) }}
            </div>
            <div>
                {{ form_label(form.lastName) }}
                {{ form_errors(form.lastName) }}
                {{ form_widget(form.lastName, {'attr': {'class': 'w-full'}}) }}
            </div>
        </div>

        <div class="grid gap-4 grid-cols-2 mb-8">
            <div>
                <div class="mb-2">
                    {{ form_label(form.email) }}
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'w-full'}}) }}
                </div>
                <div>
                    <p>PLACEHOLDER grupos</p>
                    <label>
                        <input type="checkbox" value="1" />
                        Grupo A
                    </label><br>
                    <label>
                        <input type="checkbox" value="2" />
                        Grupo B
                    </label><br>
                    <label>
                        <input type="checkbox" value="3" />
                        Grupo C
                    </label>
                </div>
            </div>
            <div>
                {{ form_label(form.observations) }}
                {{ form_errors(form.observations) }}
                {{ form_widget(form.observations, {'attr': {'class': 'w-full h-32'}}) }}
            </div>
        </div>
    {{ form_end(form) }}
    <div class="my-2">
        <a class="mx-2" href="{{ path('home') }}">Volver</a>
    </div>
</div>
{% endblock %}